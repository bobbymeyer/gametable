<div class="mx-auto max-w-7xl px-4 py-8">
  <%= link_to @series.name, @series, class: "text-sm text-stone-600 dark:text-stone-400 hover:text-stone-800 dark:hover:text-stone-300" %>
  <div class="mb-6 flex items-center justify-between mt-1">
    <h1 class="text-3xl font-bold text-stone-900 dark:text-white"><%= @episode.title %></h1>
    <%= link_to "Edit", edit_episode_path(@episode), class: "rounded-lg border border-stone-400 dark:border-stone-600 px-4 py-2 text-sm font-medium text-stone-700 dark:text-stone-300 hover:bg-stone-200 dark:hover:bg-stone-800/50 transition-colors" %>
  </div>

  <% if @episode.session_date.present? %>
    <p class="text-stone-600 dark:text-stone-400 mb-4">Session date: <%= @episode.session_date %></p>
  <% end %>

  <% if @episode.notes.present? %>
    <div class="prose dark:prose-invert max-w-none">
      <%= simple_format(@episode.notes, class: "text-stone-700 dark:text-stone-300") %>
    </div>
  <% end %>
</div>
